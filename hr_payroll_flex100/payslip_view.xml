<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_hr_payslip_form" model="ir.ui.view">
      <field name="name">hr.payslip.form.flex100</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
      <field name="arch" type="xml">
        <page string="Worked Days &amp; Inputs" position="after">
          <page string="Time funds">
            <group>
              <field name="compensary_leave" />
              <field name="flextime" />
              <field name="total_compensary_leave" />
            </group>
<!--
            <field name="id" invisible='1' />
            <field name="holiday_ids" context="{'slip_id': id}">
              <tree>
                <field name="name" />
                <field name="ps_max_leaves" />
                <field name="ps_leaves_taken" />
              </tree>
            </field>
-->
          </page>
        </page>
      </field>
    </record>
    <template id="payslip_document" inherit_id="l10n_se_hr_payroll.payslip_document">
        <xpath expr="//table[@id='tidssaldon']" position="replace">
            <table class="table table-bordered table-responsive">
                <tbody>
                    <tr>
                        <td><strong>Tidssaldon</strong></td>
                    </tr>
                    <tr>
                        <td><span class="pull-left">Komptid</span><span class="pull-right"><t t-esc="o.compensary_leave" /> minut(er)</span></td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
  </data>
</openerp>
